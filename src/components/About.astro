---
import '../styles/global.css';
import { Image } from 'astro:assets';
import Headshot from '../assets/MichaelHeadshot.jpg';
import SocialIcons from './SocialIcons.astro';
---

<div
  class="container mx-auto p-4 flex flex-col-reverse text-center items-center md:flex-row md:items-start md:text-start gap-4"
>
  <div class="flex flex-col items-center md:items-start gap-4">
    <div>
      <h1 class="text-5xl font-bold font-sans tracking-tighter">
        Hi, I'm Michael
      </h1>
      <p class="text-lg/6 pr-4 text-gray-300 mt-4">
        19-year-old software engineer and student based in Corvallis, Oregon.
        Currently attending Oregon State University, pursuing a degree in
        Computer Science.
      </p>
    </div>
    <div>
      <p class="text-gray-400">Interested in my experience?</p>
      <SocialIcons />
    </div>
  </div>
  <Image
    src={Headshot}
    alt="A headshot of Michael"
    loading="lazy"
    height="250"
    class="rounded-2xl"
  />
</div>
